<idea-plugin>
    <id>com.github.tiste.responsiveintellijplugin</id>
    <name>Responsive</name>
    <vendor>tiste</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.tiste.responsiveintellijplugin.settings.ApplicationSettingsState"/>

        <applicationConfigurable parentId="tools" instance="com.github.tiste.responsiveintellijplugin.settings.ApplicationSettingsConfigurable"
                                 id="com.github.tiste.responsiveintellijplugin.settings.ApplicationSettingsConfigurable" displayName="Responsive"/>
    </extensions>
</idea-plugin>
